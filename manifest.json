{
    "manifest_version": 3,
    "name": "AI Summary for Articles",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "download.png"
    },
    "icons": {
      "16": "download.png",
      "48": "download.png",
      "128": "download.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "host_permissions": ["<all_urls>"]
  }